{%- layout 'theme' -%}

<section class="section" style="padding-top: calc(var(--header-height) + var(--spacing-3xl));">
  <div class="container container--narrow">
    <div class="page">
      <h1 class="page__title" style="font-size: var(--font-size-4xl); text-align: center; margin-bottom: var(--spacing-xl);">
        {{ page.title }}
      </h1>

      <div class="page__content" style="line-height: 1.8; color: var(--color-text-light);">
        {{ page.content }}
      </div>
    </div>
  </div>
</section>
