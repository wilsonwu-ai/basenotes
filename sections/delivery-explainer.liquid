<section class="section delivery-section">
  <div class="container">
    <div class="section__header">
      <span class="section__eyebrow">{{ section.settings.eyebrow }}</span>
      <h2 class="section__title">{{ section.settings.heading }}</h2>
      <p class="section__description">{{ section.settings.description }}</p>
    </div>

    <div class="delivery-comparison">
      {% comment %} Full Size Bottle {% endcomment %}
      <div class="delivery-item">
        <div class="delivery-item__image delivery-item__image--full">
          {%- if section.settings.full_bottle_image != blank -%}
            <img
              src="{{ section.settings.full_bottle_image | image_url: width: 400 }}"
              alt="Full size fragrance bottle"
            >
          {%- else -%}
            <div class="delivery-item__placeholder">
              <svg width="80" height="120" viewBox="0 0 80 120" fill="none" stroke="currentColor" stroke-width="1">
                <rect x="20" y="30" width="40" height="80" rx="4"/>
                <rect x="30" y="10" width="20" height="20"/>
                <rect x="35" y="0" width="10" height="10"/>
              </svg>
            </div>
          {%- endif -%}
        </div>
        <h3 class="delivery-item__title">{{ section.settings.full_bottle_title }}</h3>
        <p class="delivery-item__subtitle">{{ section.settings.full_bottle_subtitle }}</p>
        <p class="delivery-item__price delivery-item__price--muted">{{ section.settings.full_bottle_price }}</p>
      </div>

      {% comment %} Arrow {% endcomment %}
      <div class="delivery-arrow">
        <div class="delivery-arrow__circle">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </div>
        <p class="delivery-arrow__text">You Get</p>
      </div>

      {% comment %} Atomizer Vial {% endcomment %}
      <div class="delivery-item">
        <div class="delivery-item__image delivery-item__image--atomizer">
          {%- if section.settings.atomizer_image != blank -%}
            <img
              src="{{ section.settings.atomizer_image | image_url: width: 400 }}"
              alt="Basenotes 5ml atomizer"
            >
          {%- else -%}
            <div class="delivery-item__placeholder delivery-item__placeholder--light">
              <svg width="50" height="120" viewBox="0 0 50 120" fill="none" stroke="currentColor" stroke-width="1.5">
                <rect x="10" y="30" width="30" height="85" rx="4"/>
                <rect x="15" y="12" width="20" height="18"/>
                <rect x="19" y="0" width="12" height="12" rx="2"/>
                <text x="25" y="78" text-anchor="middle" font-size="10" fill="currentColor" stroke="none">BN</text>
              </svg>
            </div>
          {%- endif -%}
          <div class="delivery-item__badge">
            <span class="badge badge--gold">{{ section.settings.atomizer_badge }}</span>
          </div>
        </div>
        <h3 class="delivery-item__title">{{ section.settings.atomizer_title }}</h3>
        <p class="delivery-item__subtitle">{{ section.settings.atomizer_subtitle }}</p>
        <p class="delivery-item__price delivery-item__price--highlight">{{ section.settings.atomizer_price }}</p>
      </div>
    </div>

    {% comment %} Benefits {% endcomment %}
    <div class="delivery-benefits">
      {%- for block in section.blocks -%}
        <div class="delivery-benefit" {{ block.shopify_attributes }}>
          <div class="delivery-benefit__icon">{{ block.settings.icon }}</div>
          <h4 class="delivery-benefit__title">{{ block.settings.title }}</h4>
          <p class="delivery-benefit__description">{{ block.settings.description }}</p>
        </div>
      {%- endfor -%}
    </div>

    {%- if section.settings.button_label != blank -%}
      <div class="text-center mt-5">
        <a href="{{ section.settings.button_link }}" class="btn btn--primary btn--large">
          {{ section.settings.button_label }}
        </a>
      </div>
    {%- endif -%}
  </div>
</section>

<style>
  .delivery-section {
    background: var(--color-background-secondary);
  }

  .delivery-comparison {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: var(--spacing-2xl);
    align-items: center;
    max-width: 900px;
    margin: 0 auto;
  }

  .delivery-item {
    text-align: center;
  }

  .delivery-item__image {
    aspect-ratio: 3/4;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: var(--spacing-lg);
    overflow: hidden;
    border-radius: var(--radius-md);
    position: relative;
  }

  .delivery-item__image img {
    max-height: 100%;
    width: auto;
  }

  .delivery-item__image--full {
    background: var(--color-background);
    border: 1px solid var(--color-border);
  }

  .delivery-item__image--atomizer {
    background: linear-gradient(135deg, var(--color-primary) 0%, #333 100%);
  }

  .delivery-item__placeholder {
    text-align: center;
    padding: var(--spacing-xl);
    color: var(--color-text-light);
  }

  .delivery-item__placeholder--light {
    color: rgba(255, 255, 255, 0.8);
  }

  .delivery-item__badge {
    position: absolute;
    top: var(--spacing-md);
    right: var(--spacing-md);
  }

  .delivery-item__title {
    font-family: var(--font-heading);
    font-size: var(--font-size-xl);
    margin-bottom: var(--spacing-xs);
  }

  .delivery-item__subtitle {
    color: var(--color-text-light);
    font-size: var(--font-size-sm);
    margin: 0;
  }

  .delivery-item__price {
    font-size: var(--font-size-2xl);
    font-weight: 700;
    margin-top: var(--spacing-md);
  }

  .delivery-item__price--muted {
    color: var(--color-text-muted);
    text-decoration: line-through;
  }

  .delivery-item__price--highlight {
    color: var(--color-secondary);
  }

  .delivery-arrow {
    text-align: center;
  }

  .delivery-arrow__circle {
    background: var(--color-secondary);
    color: var(--color-primary);
    width: 60px;
    height: 60px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
  }

  .delivery-arrow__text {
    margin-top: var(--spacing-md);
    font-size: var(--font-size-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .delivery-benefits {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--spacing-xl);
    margin-top: var(--spacing-4xl);
    text-align: center;
  }

  .delivery-benefit__icon {
    font-size: 2.5rem;
    margin-bottom: var(--spacing-sm);
  }

  .delivery-benefit__title {
    font-size: var(--font-size-sm);
    font-weight: 600;
    margin-bottom: var(--spacing-xs);
  }

  .delivery-benefit__description {
    font-size: var(--font-size-sm);
    color: var(--color-text-light);
    margin: 0;
  }

  @media (max-width: 768px) {
    .delivery-comparison {
      grid-template-columns: 1fr;
      gap: var(--spacing-xl);
    }

    .delivery-arrow {
      order: -1;
    }

    .delivery-arrow__circle {
      transform: rotate(90deg);
    }

    .delivery-benefits {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 480px) {
    .delivery-benefits {
      grid-template-columns: 1fr;
    }
  }
</style>

