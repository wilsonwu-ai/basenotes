{%- liquid
  assign has_media = false
  if section.settings.video != blank or section.settings.image != blank
    assign has_media = true
  endif
-%}

<section class="hero{% unless has_media %} hero--minimal{% endunless %}">
  {%- if has_media -%}
    <div class="hero__background">
      {%- if section.settings.video != blank -%}
        <video autoplay muted loop playsinline>
          <source src="{{ section.settings.video }}" type="video/mp4">
        </video>
      {%- elsif section.settings.image != blank -%}
        <img
          src="{{ section.settings.image | image_url: width: 1920 }}"
          srcset="{{ section.settings.image | image_url: width: 750 }} 750w,
                  {{ section.settings.image | image_url: width: 1080 }} 1080w,
                  {{ section.settings.image | image_url: width: 1920 }} 1920w"
          sizes="100vw"
          alt="{{ section.settings.image.alt | default: section.settings.heading }}"
          width="1920"
          height="1080"
          loading="eager"
          fetchpriority="high"
          decoding="async"
        >
      {%- endif -%}
      <div class="hero__overlay"></div>
    </div>
  {%- endif -%}

  <div class="hero__content">
    {%- if section.settings.eyebrow != blank -%}
      <span class="hero__eyebrow">{{ section.settings.eyebrow }}</span>
    {%- endif -%}

    <h1 class="hero__title">{{ section.settings.heading }}</h1>

    {%- if section.settings.description != blank -%}
      <p class="hero__description">{{ section.settings.description }}</p>
    {%- endif -%}

    <div class="hero__cta">
      {%- if section.settings.button_label != blank -%}
        <a href="{{ section.settings.button_link }}" class="btn btn--gold btn--large">
          {{ section.settings.button_label }}
        </a>
      {%- endif -%}

      {%- if section.settings.secondary_button_label != blank -%}
        <a href="{{ section.settings.secondary_button_link }}" class="btn btn--outline-light btn--large">
          {{ section.settings.secondary_button_label }}
        </a>
      {%- endif -%}
    </div>

    {%- unless has_media -%}
      <div class="hero__accent">
        <span class="hero__price">$20<span>/month</span></span>
        <span class="hero__price-note">Premium 5ml atomizers · Free shipping · Cancel anytime</span>
      </div>
    {%- endunless -%}
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background: #1A1A2E;
  }

  /* Compact minimal hero without background media */
  .hero--minimal {
    min-height: auto;
    padding: calc(var(--header-height) + 4rem) var(--spacing-xl) 4rem;
    background: linear-gradient(135deg, #1A1A2E 0%, #0d0d1a 100%);
  }

  .hero__background {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero__background img,
  .hero__background video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(26, 26, 46, 0.4) 0%,
      rgba(26, 26, 46, 0.6) 50%,
      rgba(26, 26, 46, 0.8) 100%
    );
  }

  .hero__content {
    position: relative;
    z-index: 1;
    text-align: center;
    color: white;
    max-width: 800px;
    padding: 0 var(--spacing-xl);
  }

  .hero--minimal .hero__content {
    padding: var(--spacing-2xl) var(--spacing-xl);
  }

  .hero__eyebrow {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.25em;
    color: #C9A962;
    margin-bottom: var(--spacing-lg);
    padding: 0.5rem 1.5rem;
    border: 1px solid #C9A962;
    border-radius: var(--radius-full);
  }

  .hero__title {
    font-family: 'Cormorant Garamond', 'Playfair Display', Georgia, serif;
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 600;
    line-height: 1.1;
    margin-bottom: var(--spacing-lg);
    letter-spacing: -0.01em;
  }

  .hero--minimal .hero__title {
    font-size: clamp(2rem, 4vw, 3rem);
  }

  .hero__description {
    font-size: clamp(1rem, 1.5vw, 1.125rem);
    line-height: 1.7;
    opacity: 0.85;
    max-width: 560px;
    margin: 0 auto var(--spacing-xl);
    color: rgba(255, 255, 255, 0.9);
  }

  .hero__cta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-md);
    justify-content: center;
  }

  /* Price accent for minimal hero */
  .hero__accent {
    margin-top: var(--spacing-2xl);
    padding-top: var(--spacing-xl);
    border-top: 1px solid rgba(201, 169, 98, 0.3);
  }

  .hero__price {
    display: block;
    font-family: 'Cormorant Garamond', 'Playfair Display', Georgia, serif;
    font-size: 2.5rem;
    font-weight: 600;
    color: #C9A962;
    margin-bottom: var(--spacing-sm);
  }

  .hero__price span {
    font-size: 1.25rem;
    font-weight: 400;
    opacity: 0.8;
  }

  .hero__price-note {
    display: block;
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.6);
    letter-spacing: 0.05em;
  }

  @media (max-width: 768px) {
    .hero:not(.hero--minimal) {
      min-height: 85vh;
    }

    .hero--minimal {
      padding: calc(var(--header-height) + 2rem) var(--spacing-md) 2.5rem;
    }

    .hero__cta {
      flex-direction: column;
      align-items: center;
    }

    .hero__cta .btn {
      width: 100%;
      max-width: 300px;
    }

    .hero__price {
      font-size: 2rem;
    }
  }
</style>

{% schema %}
{
  "name": "Hero Banner",
  "tag": "section",
  "class": "hero-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    },
    {
      "type": "url",
      "id": "video",
      "label": "Background video URL (MP4)"
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow text",
      "default": "Exclusive Collection"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Discover Your Signature Scent"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Experience rare, high-end fragrances from the world's most exclusive houses. Delivered monthly to your door."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Primary button label",
      "default": "Start Your Journey"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Primary button link"
    },
    {
      "type": "text",
      "id": "secondary_button_label",
      "label": "Secondary button label",
      "default": "Take The Quiz"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary button link"
    },
    {
      "type": "checkbox",
      "id": "show_scroll_indicator",
      "label": "Show scroll indicator",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}
