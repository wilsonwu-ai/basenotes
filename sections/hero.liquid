<section class="hero">
  <div class="hero__background">
    {%- if section.settings.video != blank -%}
      <video autoplay muted loop playsinline>
        <source src="{{ section.settings.video }}" type="video/mp4">
      </video>
    {%- elsif section.settings.image != blank -%}
      <img
        src="{{ section.settings.image | image_url: width: 1920 }}"
        srcset="{{ section.settings.image | image_url: width: 750 }} 750w,
                {{ section.settings.image | image_url: width: 1080 }} 1080w,
                {{ section.settings.image | image_url: width: 1920 }} 1920w"
        sizes="100vw"
        alt="{{ section.settings.image.alt | default: section.settings.heading }}"
        width="1920"
        height="1080"
        loading="eager"
        fetchpriority="high"
        decoding="async"
      >
    {%- else -%}
      <div class="hero__placeholder">
        <svg viewBox="0 0 200 120" fill="none" xmlns="http://www.w3.org/2000/svg">
          <rect width="200" height="120" fill="#1a1a1a"/>
          <rect x="85" y="25" width="30" height="60" rx="4" stroke="#c9a86c" stroke-width="1.5" fill="none"/>
          <rect x="92" y="15" width="16" height="15" stroke="#c9a86c" stroke-width="1.5" fill="none"/>
          <rect x="96" y="8" width="8" height="7" rx="2" stroke="#c9a86c" stroke-width="1.5" fill="none"/>
          <text x="100" y="62" text-anchor="middle" font-family="serif" font-size="10" fill="#c9a86c">BN</text>
          <text x="100" y="100" text-anchor="middle" font-family="sans-serif" font-size="8" fill="#666">Add a background image</text>
        </svg>
      </div>
    {%- endif -%}
    <div class="hero__overlay"></div>
  </div>

  <div class="hero__content">
    {%- if section.settings.eyebrow != blank -%}
      <span class="hero__eyebrow">{{ section.settings.eyebrow }}</span>
    {%- endif -%}

    <h1 class="hero__title">{{ section.settings.heading }}</h1>

    {%- if section.settings.description != blank -%}
      <p class="hero__description">{{ section.settings.description }}</p>
    {%- endif -%}

    <div class="hero__cta">
      {%- if section.settings.button_label != blank -%}
        <a href="{{ section.settings.button_link }}" class="btn btn--gold btn--large">
          {{ section.settings.button_label }}
        </a>
      {%- endif -%}

      {%- if section.settings.secondary_button_label != blank -%}
        <a href="{{ section.settings.secondary_button_link }}" class="btn btn--outline-light btn--large">
          {{ section.settings.secondary_button_label }}
        </a>
      {%- endif -%}
    </div>
  </div>

  {%- if section.settings.show_scroll_indicator -%}
    <div class="hero__scroll">
      <span>Scroll</span>
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
        <path d="M12 5v14M19 12l-7 7-7-7"/>
      </svg>
    </div>
  {%- endif -%}
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero__background {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero__background img,
  .hero__background video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #1a1a1a;
  }

  .hero__placeholder svg {
    width: 100%;
    max-width: 400px;
    height: auto;
  }

  .hero__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.4) 0%,
      rgba(0, 0, 0, 0.5) 50%,
      rgba(0, 0, 0, 0.6) 100%
    );
  }

  .hero__content {
    position: relative;
    z-index: 1;
    text-align: center;
    color: white;
    max-width: 800px;
    padding: 0 var(--spacing-xl);
  }

  .hero__eyebrow {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.25em;
    color: var(--color-secondary);
    margin-bottom: var(--spacing-lg);
    padding: 0.5rem 1.5rem;
    border: 1px solid var(--color-secondary);
    border-radius: var(--radius-full);
  }

  .hero__title {
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: var(--spacing-lg);
    letter-spacing: -0.02em;
  }

  .hero__description {
    font-size: clamp(1rem, 2vw, 1.25rem);
    line-height: 1.7;
    opacity: 0.9;
    max-width: 600px;
    margin: 0 auto var(--spacing-2xl);
  }

  .hero__cta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-md);
    justify-content: center;
  }

  .hero__scroll {
    position: absolute;
    bottom: var(--spacing-2xl);
    left: 50%;
    transform: translateX(-50%);
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-sm);
    color: white;
    opacity: 0.7;
    animation: bounce 2s infinite;
  }

  .hero__scroll span {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateX(-50%) translateY(0);
    }
    40% {
      transform: translateX(-50%) translateY(-8px);
    }
    60% {
      transform: translateX(-50%) translateY(-4px);
    }
  }

  @media (max-width: 768px) {
    .hero {
      min-height: 90vh;
    }

    .hero__cta {
      flex-direction: column;
      align-items: center;
    }

    .hero__cta .btn {
      width: 100%;
      max-width: 300px;
    }
  }
</style>

{% schema %}
{
  "name": "Hero Banner",
  "tag": "section",
  "class": "hero-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    },
    {
      "type": "url",
      "id": "video",
      "label": "Background video URL (MP4)"
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow text",
      "default": "Exclusive Collection"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Discover Your Signature Scent"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Experience rare, high-end fragrances from the world's most exclusive houses. Delivered monthly to your door."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Primary button label",
      "default": "Start Your Journey"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Primary button link"
    },
    {
      "type": "text",
      "id": "secondary_button_label",
      "label": "Secondary button label",
      "default": "Take The Quiz"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary button link"
    },
    {
      "type": "checkbox",
      "id": "show_scroll_indicator",
      "label": "Show scroll indicator",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}
