<section class="section section--dark newsletter-section">
  <div class="container">
    <div class="newsletter">
      <h2 class="newsletter__title">{{ section.settings.heading }}</h2>
      <p class="newsletter__description">{{ section.settings.description }}</p>

      {%- form 'customer', class: 'newsletter__form' -%}
        <input type="hidden" name="contact[tags]" value="newsletter">
        <input
          type="email"
          name="contact[email]"
          class="newsletter__input"
          placeholder="{{ section.settings.placeholder }}"
          required
          autocomplete="email"
        >
        <button type="submit" class="btn btn--gold">
          {{ section.settings.button_label }}
        </button>
      {%- endform -%}

      {%- if section.settings.privacy_note != blank -%}
        <p class="newsletter__note">
          {{ section.settings.privacy_note }}
        </p>
      {%- endif -%}
    </div>
  </div>
</section>

<style>
  .newsletter-section {
    padding: var(--spacing-4xl) 0;
  }

  .newsletter {
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
  }

  .newsletter__title {
    font-size: var(--font-size-3xl);
    margin-bottom: var(--spacing-md);
  }

  .newsletter__description {
    color: rgba(255, 255, 255, 0.7);
    font-size: var(--font-size-lg);
    margin-bottom: var(--spacing-xl);
  }

  .newsletter__form {
    display: flex;
    gap: var(--spacing-sm);
    max-width: 500px;
    margin: 0 auto;
  }

  .newsletter__input {
    flex: 1;
    padding: 1rem 1.25rem;
    font-family: var(--font-body);
    font-size: var(--font-size-base);
    color: var(--color-text);
    background: white;
    border: 2px solid transparent;
    border-radius: var(--radius-sm);
    transition: border-color 0.2s;
  }

  .newsletter__input:focus {
    outline: none;
    border-color: var(--color-secondary);
  }

  .newsletter__input::placeholder {
    color: var(--color-text-muted);
  }

  .newsletter__note {
    margin-top: var(--spacing-lg);
    font-size: var(--font-size-xs);
    opacity: 0.5;
  }

  @media (max-width: 576px) {
    .newsletter__form {
      flex-direction: column;
    }

    .newsletter__form .btn {
      width: 100%;
    }
  }
</style>

{% schema %}
{
  "name": "Newsletter",
  "tag": "section",
  "class": "newsletter-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Join the Inner Circle"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Be the first to discover new arrivals, exclusive offers, and insider access to the world of luxury fragrance."
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "Input placeholder",
      "default": "Enter your email"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Subscribe"
    },
    {
      "type": "text",
      "id": "privacy_note",
      "label": "Privacy note",
      "default": "We respect your privacy. Unsubscribe at any time."
    }
  ],
  "presets": [
    {
      "name": "Newsletter"
    }
  ]
}
{% endschema %}
