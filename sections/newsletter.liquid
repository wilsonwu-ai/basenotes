<section class="section section--dark">
  <div class="container">
    <div class="newsletter">
      <h2 class="section__title">{{ section.settings.heading }}</h2>
      <p class="section__description" style="color: rgba(255,255,255,0.7);">{{ section.settings.description }}</p>

      {%- form 'customer', class: 'newsletter__form' -%}
        <input type="hidden" name="contact[tags]" value="newsletter">
        <input
          type="email"
          name="contact[email]"
          class="newsletter__input"
          placeholder="{{ section.settings.placeholder }}"
          required
          autocomplete="email"
        >
        <button type="submit" class="btn btn--gold">
          {{ section.settings.button_label }}
        </button>
      {%- endform -%}

      {%- if section.settings.privacy_note != blank -%}
        <p style="margin-top: 1rem; font-size: var(--font-size-xs); opacity: 0.5;">
          {{ section.settings.privacy_note }}
        </p>
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Newsletter",
  "tag": "section",
  "class": "newsletter-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Join the Inner Circle"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Be the first to discover new arrivals, exclusive offers, and insider access to the world of luxury fragrance."
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "Input placeholder",
      "default": "Enter your email"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Subscribe"
    },
    {
      "type": "text",
      "id": "privacy_note",
      "label": "Privacy note",
      "default": "We respect your privacy. Unsubscribe at any time."
    }
  ],
  "presets": [
    {
      "name": "Newsletter"
    }
  ]
}
{% endschema %}
