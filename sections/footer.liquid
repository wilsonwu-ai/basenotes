<footer class="footer">
  <div class="container">
    <div class="footer__grid">
      <div class="footer__brand">
        <div class="footer__logo">
          {%- if section.settings.logo != blank -%}
            <img src="{{ section.settings.logo | image_url: width: 200 }}" alt="{{ shop.name }}" loading="lazy">
          {%- else -%}
            {{ shop.name }}
          {%- endif -%}
        </div>
        <p class="footer__tagline">{{ section.settings.tagline }}</p>

        {%- if section.settings.show_social -%}
          <div class="footer__social">
            {%- if settings.social_instagram != blank -%}
              <a href="{{ settings.social_instagram }}" target="_blank" rel="noopener" aria-label="Instagram">
