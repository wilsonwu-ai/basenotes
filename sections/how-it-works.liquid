<section class="section how-it-works" id="how-it-works">
  <div class="container">
    <div class="section__header">
      {%- if section.settings.eyebrow != blank -%}
        <span class="section__eyebrow">{{ section.settings.eyebrow }}</span>
      {%- endif -%}
      <h2 class="section__title">{{ section.settings.heading }}</h2>
      {%- if section.settings.description != blank -%}
        <p class="section__description">{{ section.settings.description }}</p>
      {%- endif -%}
    </div>

    <div class="steps">
      {%- for block in section.blocks -%}
        <div class="step" {{ block.shopify_attributes }}>
          <div class="step__number">{{ forloop.index }}</div>
          <h3 class="step__title">{{ block.settings.title }}</h3>
          <p class="step__description">{{ block.settings.description }}</p>
        </div>
        {%- unless forloop.last -%}
          <div class="step__connector">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </div>
        {%- endunless -%}
      {%- endfor -%}
    </div>

    {%- if section.settings.button_label != blank -%}
      <div class="text-center mt-5">
        <a href="{{ section.settings.button_link }}" class="btn btn--primary btn--large">
          {{ section.settings.button_label }}
        </a>
      </div>
    {%- endif -%}
  </div>
</section>

<style>
  .how-it-works {
    background: var(--color-background);
  }

  .steps {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    gap: var(--spacing-md);
    max-width: 1100px;
    margin: 0 auto;
  }

  .step {
    flex: 1;
    max-width: 250px;
    text-align: center;
    padding: var(--spacing-lg);
  }

  .step__number {
    width: 64px;
    height: 64px;
    margin: 0 auto var(--spacing-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-primary);
    background: var(--color-secondary);
    border-radius: 50%;
  }

  .step__title {
    font-size: var(--font-size-lg);
    font-weight: 600;
    margin-bottom: var(--spacing-sm);
    color: var(--color-primary);
  }

  .step__description {
    font-size: var(--font-size-sm);
    color: var(--color-text-light);
    line-height: 1.6;
    margin: 0;
  }

  .step__connector {
    display: flex;
    align-items: center;
    padding-top: 2rem;
    color: var(--color-border-dark);
  }

  .step__connector svg {
    width: 24px;
    height: 24px;
  }

  @media (max-width: 992px) {
    .steps {
      flex-wrap: wrap;
      gap: var(--spacing-xl);
    }

    .step {
      flex: 0 0 calc(50% - var(--spacing-lg));
      max-width: none;
    }

    .step__connector {
      display: none;
    }
  }

  @media (max-width: 576px) {
    .steps {
      flex-direction: column;
      align-items: center;
    }

    .step {
      flex: 0 0 100%;
      max-width: 300px;
    }
  }
</style>

