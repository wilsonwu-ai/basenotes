{%- liquid
  assign current_variant = product.selected_or_first_available_variant
  assign featured_image = current_variant.featured_image | default: product.featured_image
-%}

<section class="section" style="padding-top: calc(var(--header-height) + var(--spacing-3xl));">
  <div class="container">
    <div class="product" style="display: grid; grid-template-columns: 1fr 1fr; gap: var(--spacing-4xl); align-items: start;">

      {% comment %} Product Gallery {% endcomment %}
      <div class="product__gallery">
        <div class="product__main-image" style="aspect-ratio: 3/4; background: var(--color-background-secondary); overflow: hidden;">
          {%- if featured_image != blank -%}
            <img
              src="{{ featured_image | image_url: width: 1000 }}"
              alt="{{ featured_image.alt | default: product.title }}"
              style="width: 100%; height: 100%; object-fit: cover;"
              id="mainProductImage"
            >
          {%- else -%}
            {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </div>

        {%- if product.images.size > 1 -%}
          <div class="product__thumbnails" style="display: flex; gap: var(--spacing-sm); margin-top: var(--spacing-md); overflow-x: auto;">
            {%- for image in product.images -%}
              <button
                class="product__thumbnail{% if image == featured_image %} is-active{% endif %}"
                data-image-url="{{ image | image_url: width: 1000 }}"
                style="width: 80px; height: 100px; flex-shrink: 0; border: 2px solid {% if image == featured_image %}var(--color-secondary){% else %}transparent{% endif %}; padding: 0; background: var(--color-background-secondary); cursor: pointer;"
              >
                <img
                  src="{{ image | image_url: width: 200 }}"
                  alt="{{ image.alt | default: product.title }}"
                  style="width: 100%; height: 100%; object-fit: cover;"
                >
              </button>
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>

      {% comment %} Product Info {% endcomment %}
      <div class="product__info">
        <span class="product__vendor text-uppercase" style="font-size: var(--font-size-xs); letter-spacing: 0.15em; color: var(--color-secondary);">
          {{ product.vendor }}
        </span>

        <h1 class="product__title" style="font-size: var(--font-size-4xl); margin: var(--spacing-sm) 0 var(--spacing-lg);">
          {{ product.title }}
        </h1>

        <div class="product__price" style="font-size: var(--font-size-2xl); margin-bottom: var(--spacing-xl);">
          {%- if current_variant.compare_at_price > current_variant.price -%}
            <span style="text-decoration: line-through; color: var(--color-text-muted); margin-right: var(--spacing-sm);">
              {{ current_variant.compare_at_price | money }}
            </span>
          {%- endif -%}
          <span id="productPrice">{{ current_variant.price | money }}</span>

          {%- if product.price == 0 -%}
            <span class="badge badge--gold" style="margin-left: var(--spacing-sm);">Included in Subscription</span>
          {%- endif -%}
        </div>

        {%- if product.description != blank -%}
          <div class="product__description" style="margin-bottom: var(--spacing-xl); color: var(--color-text-light); line-height: 1.8;">
            {{ product.description }}
          </div>
        {%- endif -%}

        {% comment %} Fragrance Notes {% endcomment %}
        {%- if product.metafields.custom.top_notes != blank or product.metafields.custom.heart_notes != blank or product.metafields.custom.base_notes != blank -%}
          <div class="fragrance-pyramid" style="margin-bottom: var(--spacing-xl); padding: var(--spacing-xl); background: var(--color-background-secondary);">
            <h3 style="font-size: var(--font-size-sm); text-transform: uppercase; letter-spacing: 0.1em; margin-bottom: var(--spacing-lg);">Fragrance Notes</h3>
            <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: var(--spacing-lg); text-align: center;">
              {%- if product.metafields.custom.top_notes != blank -%}
                <div>
                  <span style="display: block; font-size: var(--font-size-xs); text-transform: uppercase; letter-spacing: 0.1em; color: var(--color-text-light); margin-bottom: var(--spacing-xs);">Top</span>
                  <span style="font-family: var(--font-heading); font-size: var(--font-size-lg);">{{ product.metafields.custom.top_notes }}</span>
                </div>
              {%- endif -%}
              {%- if product.metafields.custom.heart_notes != blank -%}
                <div>
                  <span style="display: block; font-size: var(--font-size-xs); text-transform: uppercase; letter-spacing: 0.1em; color: var(--color-text-light); margin-bottom: var(--spacing-xs);">Heart</span>
                  <span style="font-family: var(--font-heading); font-size: var(--font-size-lg);">{{ product.metafields.custom.heart_notes }}</span>
                </div>
              {%- endif -%}
              {%- if product.metafields.custom.base_notes != blank -%}
                <div>
                  <span style="display: block; font-size: var(--font-size-xs); text-transform: uppercase; letter-spacing: 0.1em; color: var(--color-text-light); margin-bottom: var(--spacing-xs);">Base</span>
                  <span style="font-family: var(--font-heading); font-size: var(--font-size-lg);">{{ product.metafields.custom.base_notes }}</span>
                </div>
              {%- endif -%}
            </div>
          </div>
        {%- endif -%}

        {% comment %} Add to Cart Form {% endcomment %}
        {%- form 'product', product, id: 'productForm', class: 'product__form' -%}
          <input type="hidden" name="id" value="{{ current_variant.id }}" id="variantId">

          {%- if product.variants.size > 1 -%}
            <div class="product__variants" style="margin-bottom: var(--spacing-xl);">
              {%- for option in product.options_with_values -%}
                <div class="form-group">
                  <label class="form-label" for="option-{{ option.name | handle }}">{{ option.name }}</label>
                  <select
                    id="option-{{ option.name | handle }}"
                    class="form-select"
                    data-option-index="{{ forloop.index0 }}"
                  >
                    {%- for value in option.values -%}
                      <option value="{{ value }}"{% if option.selected_value == value %} selected{% endif %}>
                        {{ value }}
                      </option>
                    {%- endfor -%}
                  </select>
                </div>
              {%- endfor -%}
            </div>
          {%- endif -%}

          <div class="product__actions" style="display: flex; gap: var(--spacing-md); margin-bottom: var(--spacing-xl);">
            <button
              type="submit"
              class="btn btn--primary btn--large"
              style="flex: 1; min-height: 60px;"
              {% unless current_variant.available %}disabled{% endunless %}
            >
              {%- if current_variant.available -%}
                Add to Queue
              {%- else -%}
                Sold Out
              {%- endif -%}
            </button>

            <button type="button" class="btn btn--outline btn--large" data-wishlist-add style="min-width: 60px; min-height: 60px; padding: 0;">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="28" height="28" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
              </svg>
            </button>
          </div>
        {%- endform -%}

        {% comment %} Product Details Accordion {% endcomment %}
        <div class="product__details" style="border-top: 1px solid var(--color-border);">
          {%- for block in section.blocks -%}
            <details class="product__accordion" style="border-bottom: 1px solid var(--color-border);" {{ block.shopify_attributes }}>
              <summary style="padding: var(--spacing-lg) 0; cursor: pointer; font-weight: 500; display: flex; justify-content: space-between; align-items: center;">
                {{ block.settings.heading }}
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M6 9l6 6 6-6"/>
                </svg>
              </summary>
              <div style="padding-bottom: var(--spacing-lg); color: var(--color-text-light); line-height: 1.7;">
                {{ block.settings.content }}
              </div>
            </details>
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Thumbnail gallery
    const thumbnails = document.querySelectorAll('.product__thumbnail');
    const mainImage = document.getElementById('mainProductImage');

    thumbnails.forEach(thumb => {
      thumb.addEventListener('click', function() {
        thumbnails.forEach(t => {
          t.classList.remove('is-active');
          t.style.borderColor = 'transparent';
        });
        this.classList.add('is-active');
        this.style.borderColor = 'var(--color-secondary)';
        if (mainImage) {
          mainImage.src = this.dataset.imageUrl;
        }
      });
    });
  });
</script>

<style>
  @media (max-width: 768px) {
    .product {
      grid-template-columns: 1fr !important;
    }

    .product__actions {
      flex-direction: column;
    }

    .product__actions .btn {
      width: 100%;
      min-height: 56px;
    }

    .product__actions .btn[data-wishlist-add] {
      flex-direction: row;
      justify-content: center;
      gap: var(--spacing-sm);
    }

    .product__actions .btn[data-wishlist-add]::after {
      content: 'Add to Wishlist';
    }
  }

  details summary::-webkit-details-marker {
    display: none;
  }

  details[open] summary svg {
    transform: rotate(180deg);
  }

  .btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }
</style>

