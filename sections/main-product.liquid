{%- liquid
  assign current_variant = product.selected_or_first_available_variant
  assign featured_image = current_variant.featured_image | default: product.featured_image
-%}

<section class="product-page">
  <div class="container">
    <div class="product-layout">

      {% comment %} Product Gallery - Left Side {% endcomment %}
      <div class="product-gallery">
        <div class="product-gallery__main">
          {%- if featured_image != blank -%}
            <img
              src="{{ featured_image | image_url: width: 800 }}"
              alt="{{ featured_image.alt | default: product.title }}"
              id="mainProductImage"
            >
          {%- else -%}
            <div class="product-gallery__placeholder">
              {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
          {%- endif -%}
        </div>

        {%- if product.images.size > 1 -%}
          <div class="product-gallery__thumbs">
            {%- for image in product.images -%}
              <button
                class="product-gallery__thumb {% if image == featured_image %}is-active{% endif %}"
                data-image-url="{{ image | image_url: width: 800 }}"
                type="button"
              >
                <img
                  src="{{ image | image_url: width: 150 }}"
                  alt="{{ image.alt | default: product.title }}"
                >
              </button>
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>

      {% comment %} Product Info - Right Side {% endcomment %}
      <div class="product-info">

        {% comment %} Brand & Title {% endcomment %}
        <div class="product-info__header">
          <span class="product-info__brand">{{ product.vendor }}</span>
          <h1 class="product-info__title">{{ product.title }}</h1>
        </div>

        {% comment %} Subscription Box {% endcomment %}
        <div class="subscription-box">
          <div class="subscription-box__header">
            <div class="subscription-box__bottle">
              <div class="bottle-icon">
                <svg viewBox="0 0 40 70" fill="none">
                  <rect x="14" y="0" width="12" height="6" rx="1" fill="#c9a86c"/>
                  <rect x="16" y="6" width="8" height="4" fill="#666"/>
                  <rect x="8" y="10" width="24" height="55" rx="3" fill="#1a1a1a" stroke="#c9a86c" stroke-width="0.5"/>
                  <rect x="12" y="22" width="16" height="24" rx="1" fill="#222"/>
                  <text x="20" y="36" text-anchor="middle" fill="#c9a86c" font-size="7" font-weight="600">BN</text>
                  <text x="20" y="43" text-anchor="middle" fill="#888" font-size="4">5ml</text>
                </svg>
              </div>
              <span class="bottle-label">5ml Spray</span>
            </div>

            <div class="subscription-box__pricing">
              <div class="price-main">
                <span class="price-amount">$20</span>
                <span class="price-period">/ month</span>
              </div>
              <p class="price-note">Month-to-month. Cancel anytime.</p>
            </div>
          </div>

          <ul class="subscription-box__benefits">
            <li>
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="20 6 9 17 4 12"/>
              </svg>
              <span>5ml atomizer (~30 sprays)</span>
            </li>
            <li>
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="20 6 9 17 4 12"/>
              </svg>
              <span>Free shipping every month</span>
            </li>
            <li>
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="20 6 9 17 4 12"/>
              </svg>
              <span>Swap scents anytime</span>
            </li>
          </ul>

          {%- form 'product', product, id: 'productForm', class: 'subscription-box__form' -%}
            <input type="hidden" name="id" value="{{ current_variant.id }}" id="variantId">

            {%- if product.variants.size > 1 -%}
              <div class="product-variants">
                {%- for option in product.options_with_values -%}
                  <div class="variant-selector">
                    <label for="option-{{ option.name | handle }}">{{ option.name }}</label>
                    <select id="option-{{ option.name | handle }}" data-option-index="{{ forloop.index0 }}">
                      {%- for value in option.values -%}
                        <option value="{{ value }}"{% if option.selected_value == value %} selected{% endif %}>
                          {{ value }}
                        </option>
                      {%- endfor -%}
                    </select>
                  </div>
                {%- endfor -%}
              </div>
            {%- endif -%}

            <button
              type="submit"
              class="add-to-queue-btn"
              {% unless current_variant.available %}disabled{% endunless %}
            >
              {%- if current_variant.available -%}
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M12 5v14M5 12h14"/>
                </svg>
                Add to Queue
              {%- else -%}
                Sold Out
              {%- endif -%}
            </button>
          {%- endform -%}
        </div>

        {% comment %} Description {% endcomment %}
        {%- if product.description != blank -%}
          <div class="product-info__description">
            {{ product.description }}
          </div>
        {%- endif -%}

        {% comment %} Fragrance Notes {% endcomment %}
        {%- if product.metafields.custom.top_notes != blank or product.metafields.custom.heart_notes != blank or product.metafields.custom.base_notes != blank -%}
          <div class="fragrance-notes">
            <h3 class="fragrance-notes__title">Fragrance Notes</h3>
            <div class="fragrance-notes__grid">
              {%- if product.metafields.custom.top_notes != blank -%}
                <div class="fragrance-note">
                  <span class="fragrance-note__label">Top</span>
                  <span class="fragrance-note__value">{{ product.metafields.custom.top_notes }}</span>
                </div>
              {%- endif -%}
              {%- if product.metafields.custom.heart_notes != blank -%}
                <div class="fragrance-note">
                  <span class="fragrance-note__label">Heart</span>
                  <span class="fragrance-note__value">{{ product.metafields.custom.heart_notes }}</span>
                </div>
              {%- endif -%}
              {%- if product.metafields.custom.base_notes != blank -%}
                <div class="fragrance-note">
                  <span class="fragrance-note__label">Base</span>
                  <span class="fragrance-note__value">{{ product.metafields.custom.base_notes }}</span>
                </div>
              {%- endif -%}
            </div>
          </div>
        {%- endif -%}

        {% comment %} Product Details Accordion {% endcomment %}
        <div class="product-accordion">
          {%- for block in section.blocks -%}
            <details class="accordion-item" {{ block.shopify_attributes }}>
              <summary class="accordion-header">
                {{ block.settings.heading }}
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M6 9l6 6 6-6"/>
                </svg>
              </summary>
              <div class="accordion-content">
                {{ block.settings.content }}
              </div>
            </details>
          {%- endfor -%}
        </div>

      </div>
    </div>
  </div>
</section>

<style>
  .product-page {
    padding: calc(var(--header-height) + 2rem) 0 4rem;
  }

  .product-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: start;
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Gallery Styles */
  .product-gallery__main {
    background: var(--color-background-secondary);
    aspect-ratio: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    border-radius: 8px;
  }

  .product-gallery__main img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .product-gallery__thumbs {
    display: flex;
    gap: 0.75rem;
    margin-top: 1rem;
    overflow-x: auto;
    padding-bottom: 0.5rem;
  }

  .product-gallery__thumb {
    width: 70px;
    height: 70px;
    flex-shrink: 0;
    padding: 0;
    border: 2px solid transparent;
    background: var(--color-background-secondary);
    cursor: pointer;
    border-radius: 4px;
    overflow: hidden;
    transition: border-color 0.2s;
  }

  .product-gallery__thumb.is-active,
  .product-gallery__thumb:hover {
    border-color: var(--color-secondary);
  }

  .product-gallery__thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Product Info Styles */
  .product-info {
    position: sticky;
    top: calc(var(--header-height) + 2rem);
  }

  .product-info__header {
    margin-bottom: 1.5rem;
  }

  .product-info__brand {
    display: block;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-secondary);
    margin-bottom: 0.5rem;
  }

  .product-info__title {
    font-size: 2rem;
    font-weight: 700;
    line-height: 1.2;
    margin: 0;
  }

  /* Subscription Box */
  .subscription-box {
    background: #fafafa;
    border: 1px solid var(--color-border);
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 2rem;
  }

  .subscription-box__header {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    padding-bottom: 1.25rem;
    border-bottom: 1px solid var(--color-border);
    margin-bottom: 1.25rem;
  }

  .subscription-box__bottle {
    text-align: center;
    flex-shrink: 0;
  }

  .bottle-icon {
    width: 60px;
    height: 90px;
    background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%);
    border-radius: 8px;
    padding: 10px 8px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .bottle-icon svg {
    width: 40px;
    height: 70px;
  }

  .bottle-label {
    display: block;
    font-size: 0.7rem;
    font-weight: 600;
    color: var(--color-text-light);
    margin-top: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .subscription-box__pricing {
    flex: 1;
  }

  .price-main {
    display: flex;
    align-items: baseline;
    gap: 0.25rem;
  }

  .price-amount {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-primary);
  }

  .price-period {
    font-size: 1rem;
    color: var(--color-text-light);
  }

  .price-note {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin: 0.25rem 0 0;
  }

  .subscription-box__benefits {
    list-style: none;
    padding: 0;
    margin: 0 0 1.25rem;
    display: flex;
    flex-direction: column;
    gap: 0.625rem;
  }

  .subscription-box__benefits li {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    font-size: 0.9375rem;
    color: var(--color-text);
  }

  .subscription-box__benefits svg {
    width: 18px;
    height: 18px;
    stroke: var(--color-secondary);
    flex-shrink: 0;
  }

  .subscription-box__form {
    margin: 0;
  }

  .product-variants {
    margin-bottom: 1rem;
  }

  .variant-selector {
    margin-bottom: 0.75rem;
  }

  .variant-selector label {
    display: block;
    font-size: 0.8125rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
    color: var(--color-text);
  }

  .variant-selector select {
    width: 100%;
    padding: 0.875rem 1rem;
    font-size: 1rem;
    border: 1px solid var(--color-border);
    border-radius: 6px;
    background: white;
    cursor: pointer;
  }

  .add-to-queue-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.625rem;
    width: 100%;
    padding: 1.125rem 2rem;
    font-size: 1rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.075em;
    color: white;
    background: var(--color-primary);
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: background-color 0.2s, transform 0.1s;
  }

  .add-to-queue-btn:hover {
    background: #333;
  }

  .add-to-queue-btn:active {
    transform: scale(0.98);
  }

  .add-to-queue-btn:disabled {
    background: #ccc;
    cursor: not-allowed;
  }

  .add-to-queue-btn svg {
    width: 20px;
    height: 20px;
  }

  /* Description */
  .product-info__description {
    font-size: 0.9375rem;
    line-height: 1.7;
    color: var(--color-text-light);
    margin-bottom: 2rem;
  }

  .product-info__description p {
    margin-bottom: 1rem;
  }

  .product-info__description p:last-child {
    margin-bottom: 0;
  }

  /* Fragrance Notes */
  .fragrance-notes {
    background: var(--color-background-secondary);
    border-radius: 8px;
    padding: 1.25rem;
    margin-bottom: 2rem;
  }

  .fragrance-notes__title {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin: 0 0 1rem;
    color: var(--color-text);
  }

  .fragrance-notes__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    text-align: center;
  }

  .fragrance-note__label {
    display: block;
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-muted);
    margin-bottom: 0.375rem;
  }

  .fragrance-note__value {
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-text);
  }

  /* Accordion */
  .product-accordion {
    border-top: 1px solid var(--color-border);
  }

  .accordion-item {
    border-bottom: 1px solid var(--color-border);
  }

  .accordion-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    padding: 1.125rem 0;
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--color-text);
    cursor: pointer;
    list-style: none;
  }

  .accordion-header::-webkit-details-marker {
    display: none;
  }

  .accordion-header svg {
    width: 18px;
    height: 18px;
    transition: transform 0.2s;
  }

  .accordion-item[open] .accordion-header svg {
    transform: rotate(180deg);
  }

  .accordion-content {
    padding-bottom: 1.125rem;
    font-size: 0.9375rem;
    line-height: 1.7;
    color: var(--color-text-light);
  }

  /* Mobile Responsive */
  @media (max-width: 900px) {
    .product-layout {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .product-info {
      position: static;
    }

    .product-gallery__main {
      aspect-ratio: 1;
    }
  }

  @media (max-width: 600px) {
    .product-page {
      padding: calc(var(--header-height) + 1rem) 0 2rem;
    }

    .product-info__title {
      font-size: 1.625rem;
    }

    .subscription-box {
      padding: 1.25rem;
    }

    .subscription-box__header {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }

    .subscription-box__pricing {
      text-align: center;
    }

    .price-main {
      justify-content: center;
    }

    .fragrance-notes__grid {
      grid-template-columns: 1fr;
      gap: 0.75rem;
    }

    .fragrance-note {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0.5rem 0;
      border-bottom: 1px solid var(--color-border);
    }

    .fragrance-note:last-child {
      border-bottom: none;
    }

    .fragrance-note__label {
      margin-bottom: 0;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const thumbnails = document.querySelectorAll('.product-gallery__thumb');
    const mainImage = document.getElementById('mainProductImage');

    thumbnails.forEach(thumb => {
      thumb.addEventListener('click', function() {
        thumbnails.forEach(t => t.classList.remove('is-active'));
        this.classList.add('is-active');
        if (mainImage) {
          mainImage.src = this.dataset.imageUrl;
        }
      });
    });
  });
</script>

