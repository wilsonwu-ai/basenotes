<style>
  .basenotes-thankyou {
    max-width: 600px;
    margin: 32px auto;
    padding: 0 16px;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  }

  .basenotes-thankyou__card {
    background: #fff;
    border: 1px solid #e5e5e5;
    border-radius: 12px;
    padding: 32px;
    margin-bottom: 24px;
    text-align: center;
  }

  .basenotes-thankyou__icon {
    width: 72px;
    height: 72px;
    margin: 0 auto 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #c9a86c 0%, #d4b88a 100%);
    border-radius: 50%;
    color: #fff;
  }

  .basenotes-thankyou__icon svg {
    width: 36px;
    height: 36px;
  }

  .basenotes-thankyou__title {
    font-size: 28px;
    font-weight: 700;
    margin: 0 0 8px;
    color: #1a1a1a;
  }

  .basenotes-thankyou__subtitle {
    font-size: 16px;
    color: #666;
    margin: 0 0 24px;
  }

  .basenotes-thankyou__order-number {
    display: inline-block;
    padding: 8px 16px;
    background: #f5f5f5;
    border-radius: 6px;
    font-size: 14px;
    color: #1a1a1a;
  }

  .basenotes-thankyou__steps {
    background: #fafafa;
    border: 1px solid #e5e5e5;
    border-radius: 12px;
    padding: 24px;
    margin-bottom: 24px;
  }

  .basenotes-thankyou__steps-title {
    font-size: 18px;
    font-weight: 600;
    margin: 0 0 20px;
    color: #1a1a1a;
  }

  .basenotes-thankyou__step {
    display: flex;
    align-items: flex-start;
    gap: 16px;
    text-align: left;
    padding: 12px 0;
    border-bottom: 1px solid #e5e5e5;
  }

  .basenotes-thankyou__step:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .basenotes-thankyou__step-number {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #c9a86c;
    color: #fff;
    font-size: 14px;
    font-weight: 600;
    border-radius: 50%;
    flex-shrink: 0;
  }

  .basenotes-thankyou__step-content h4 {
    font-size: 14px;
    font-weight: 600;
    margin: 0 0 4px;
    color: #1a1a1a;
  }

  .basenotes-thankyou__step-content p {
    font-size: 13px;
    color: #666;
    margin: 0;
    line-height: 1.5;
  }

  .basenotes-thankyou__cta {
    background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%);
    border-radius: 12px;
    padding: 32px;
    color: #fff;
    text-align: center;
    margin-bottom: 24px;
  }

  .basenotes-thankyou__cta-badge {
    display: inline-block;
    padding: 4px 12px;
    background: #c9a86c;
    color: #1a1a1a;
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border-radius: 20px;
    margin-bottom: 16px;
  }

  .basenotes-thankyou__cta h3 {
    font-size: 22px;
    font-weight: 700;
    margin: 0 0 8px;
  }

  .basenotes-thankyou__cta p {
    font-size: 14px;
    opacity: 0.8;
    margin: 0 0 20px;
  }

  .basenotes-thankyou__cta-btn {
    display: inline-block;
    padding: 14px 32px;
    background: #c9a86c;
    color: #1a1a1a;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    border-radius: 6px;
    transition: background 0.2s, transform 0.2s;
  }

  .basenotes-thankyou__cta-btn:hover {
    background: #d4b88a;
    transform: translateY(-2px);
  }

  .basenotes-thankyou__social {
    text-align: center;
    padding: 24px;
    background: #fff;
    border: 1px solid #e5e5e5;
    border-radius: 12px;
    margin-bottom: 24px;
  }

  .basenotes-thankyou__social-title {
    font-size: 14px;
    color: #666;
    margin: 0 0 16px;
  }

  .basenotes-thankyou__social-links {
    display: flex;
    justify-content: center;
    gap: 12px;
  }

  .basenotes-thankyou__social-link {
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f5f5f5;
    border-radius: 50%;
    color: #1a1a1a;
    text-decoration: none;
    transition: background 0.2s, color 0.2s;
  }

  .basenotes-thankyou__social-link:hover {
    background: #1a1a1a;
    color: #fff;
  }

  .basenotes-thankyou__social-link svg {
    width: 20px;
    height: 20px;
  }

  .basenotes-thankyou__referral {
    text-align: center;
    padding: 24px;
    background: #fff8f0;
    border: 1px dashed #c9a86c;
    border-radius: 12px;
  }

  .basenotes-thankyou__referral h4 {
    font-size: 16px;
    font-weight: 600;
    margin: 0 0 8px;
    color: #1a1a1a;
  }

  .basenotes-thankyou__referral p {
    font-size: 13px;
    color: #666;
    margin: 0 0 16px;
  }

  .basenotes-thankyou__referral-code {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 16px;
    background: #fff;
    border: 1px solid #c9a86c;
    border-radius: 6px;
    font-family: monospace;
    font-size: 14px;
    font-weight: 600;
    color: #c9a86c;
  }

  .basenotes-thankyou__referral-code button {
    background: none;
    border: none;
    cursor: pointer;
    padding: 4px;
    color: #666;
  }

  .basenotes-thankyou__referral-code button:hover {
    color: #c9a86c;
  }

  @media (max-width: 480px) {
    .basenotes-thankyou__card,
    .basenotes-thankyou__steps,
    .basenotes-thankyou__cta {
      padding: 24px 20px;
    }

    .basenotes-thankyou__title {
      font-size: 24px;
    }
  }
</style>

<div class="basenotes-thankyou">
  <!-- Success Message -->
  <div class="basenotes-thankyou__card">
    <div class="basenotes-thankyou__icon">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="20 6 9 17 4 12"/>
      </svg>
    </div>
    <h2 class="basenotes-thankyou__title">Thank You!</h2>
    <p class="basenotes-thankyou__subtitle">Your fragrance journey is about to begin.</p>
    <span class="basenotes-thankyou__order-number">Order {{ order.name }}</span>
  </div>

  <!-- What's Next -->
  <div class="basenotes-thankyou__steps">
    <h3 class="basenotes-thankyou__steps-title">What Happens Next?</h3>

    <div class="basenotes-thankyou__step">
      <span class="basenotes-thankyou__step-number">1</span>
      <div class="basenotes-thankyou__step-content">
        <h4>Order Confirmation</h4>
        <p>You'll receive an email confirmation at {{ order.email }} with your order details.</p>
      </div>
    </div>

    <div class="basenotes-thankyou__step">
      <span class="basenotes-thankyou__step-number">2</span>
      <div class="basenotes-thankyou__step-content">
        <h4>Carefully Packaged</h4>
        <p>Your fragrance will be prepared with care and shipped within 1-2 business days.</p>
      </div>
    </div>

    <div class="basenotes-thankyou__step">
      <span class="basenotes-thankyou__step-number">3</span>
      <div class="basenotes-thankyou__step-content">
        <h4>Delivered to You</h4>
        <p>Track your package and expect delivery within 3-5 business days.</p>
      </div>
    </div>
  </div>

  <!-- Subscription CTA (for non-subscribers) -->
  {% unless customer and customer.tags contains 'subscriber' %}
  <div class="basenotes-thankyou__cta">
    <span class="basenotes-thankyou__cta-badge">Special Offer</span>
    <h3>Subscribe & Save</h3>
    <p>Get a new luxury fragrance delivered every month for just $20 + free shipping.</p>
    <a href="/pages/subscription" class="basenotes-thankyou__cta-btn">Start Your Subscription</a>
  </div>
  {% endunless %}

  <!-- Social Follow -->
  {% assign instagram_url = shop.metafields.social.instagram | default: 'https://instagram.com/basenotes' %}
  {% assign tiktok_url = shop.metafields.social.tiktok | default: 'https://tiktok.com/@basenotes' %}
  {% assign facebook_url = shop.metafields.social.facebook | default: 'https://facebook.com/basenotes' %}
  <div class="basenotes-thankyou__social">
    <p class="basenotes-thankyou__social-title">Follow us for fragrance tips & exclusive offers</p>
    <div class="basenotes-thankyou__social-links">
      {% if instagram_url != blank %}
      <a href="{{ instagram_url }}" target="_blank" class="basenotes-thankyou__social-link" aria-label="Instagram">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
          <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
          <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
        </svg>
      </a>
      {% endif %}
      {% if tiktok_url != blank %}
      <a href="{{ tiktok_url }}" target="_blank" class="basenotes-thankyou__social-link" aria-label="TikTok">
        <svg viewBox="0 0 24 24" fill="currentColor">
          <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/>
        </svg>
      </a>
      {% endif %}
      {% if facebook_url != blank %}
      <a href="{{ facebook_url }}" target="_blank" class="basenotes-thankyou__social-link" aria-label="Facebook">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
        </svg>
      </a>
      {% endif %}
    </div>
  </div>

  <!-- Referral Program -->
  <div class="basenotes-thankyou__referral">
    <h4>Share the Love, Get $10</h4>
    <p>Give your friends $10 off their first order and you'll get $10 too!</p>
    <div class="basenotes-thankyou__referral-code">
      FRIEND{{ order.order_number | modulo: 10000 }}
      <button onclick="navigator.clipboard.writeText('FRIEND{{ order.order_number | modulo: 10000 }}')" title="Copy code">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="9" y="9" width="13" height="13" rx="2" ry="2"/>
          <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/>
        </svg>
      </button>
    </div>
  </div>
</div>

<script>
  // Track purchase for analytics
  if (typeof gtag !== 'undefined') {
    gtag('event', 'purchase', {
      transaction_id: '{{ order.order_number }}',
      value: {{ order.total_price | money_without_currency | remove: ',' }},
      currency: '{{ shop.currency }}',
      items: [
        {% for line_item in order.line_items %}
        {
          item_id: '{{ line_item.sku | default: line_item.product_id }}',
          item_name: '{{ line_item.product.title | escape }}',
          price: {{ line_item.final_price | money_without_currency | remove: ',' }},
          quantity: {{ line_item.quantity }}
        }{% unless forloop.last %},{% endunless %}
        {% endfor %}
      ]
    });
  }

  // Facebook Pixel Purchase Event
  if (typeof fbq !== 'undefined') {
    fbq('track', 'Purchase', {
      value: {{ order.total_price | money_without_currency | remove: ',' }},
      currency: '{{ shop.currency }}',
      content_ids: [{% for line_item in order.line_items %}'{{ line_item.product_id }}'{% unless forloop.last %},{% endunless %}{% endfor %}],
      content_type: 'product'
    });
  }
</script>
