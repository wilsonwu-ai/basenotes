{%- layout 'theme' -%}

<section class="auth-section">
  <div class="container">
    <div class="auth-layout">

      {% comment %} Left Side - Benefits {% endcomment %}
      <div class="auth-benefits">
        <div class="auth-benefits__content">
          <span class="auth-benefits__eyebrow">Member Portal</span>
          <h2 class="auth-benefits__title">Welcome Back to Basenotes</h2>
          <p class="auth-benefits__description">Access your subscription, manage your fragrance queue, and discover your next signature scent.</p>

          <div class="auth-stats">
            <div class="auth-stat">
              <span class="auth-stat__number">10,000+</span>
              <span class="auth-stat__label">Active Members</span>
            </div>
            <div class="auth-stat">
              <span class="auth-stat__number">50,000+</span>
              <span class="auth-stat__label">Fragrances Delivered</span>
            </div>
            <div class="auth-stat">
              <span class="auth-stat__number">4.9/5</span>
              <span class="auth-stat__label">Member Rating</span>
            </div>
          </div>

          <div class="auth-benefits__testimonial">
            <p>"The convenience of having a new luxury fragrance delivered each month is unbeatable. I've discovered so many amazing scents!"</p>
            <cite>â€” James L., Member since 2023</cite>
          </div>
        </div>
      </div>

      {% comment %} Right Side - Login Form {% endcomment %}
      <div class="auth-form-container">
        <div class="auth-form-wrapper">
          <div id="LoginFormSection">
            <div class="text-center" style="margin-bottom: var(--spacing-2xl);">
              <h1 class="auth-form__title">Sign In</h1>
              <p class="auth-form__subtitle">Access your account and fragrance queue</p>
            </div>

            {%- form 'customer_login', class: 'auth-form' -%}
              {%- if form.errors -%}
                <div class="alert alert--error">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"/>
                    <line x1="12" y1="8" x2="12" y2="12"/>
                    <line x1="12" y1="16" x2="12.01" y2="16"/>
                  </svg>
                  <span>{{ form.errors | default_errors }}</span>
                </div>
              {%- endif -%}

              <div class="form-group">
                <label class="form-label" for="CustomerEmail">Email Address</label>
                <input
                  type="email"
                  name="customer[email]"
                  id="CustomerEmail"
                  class="form-input"
                  autocomplete="email"
                  autocapitalize="off"
                  autocorrect="off"
                  placeholder="you@example.com"
                  required
                >
              </div>

              <div class="form-group">
                <label class="form-label" for="CustomerPassword">Password</label>
                <div class="password-input-wrapper">
                  <input
                    type="password"
                    name="customer[password]"
                    id="CustomerPassword"
                    class="form-input"
                    autocomplete="current-password"
                    required
                  >
                  <button type="button" class="password-toggle" data-toggle-password>
                    <svg class="icon-show" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                      <circle cx="12" cy="12" r="3"/>
                    </svg>
                    <svg class="icon-hide" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="display: none;">
                      <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"/>
                      <line x1="1" y1="1" x2="23" y2="23"/>
                    </svg>
                  </button>
                </div>
              </div>

              <div class="form-options">
                <label class="checkbox-label">
                  <input type="checkbox" name="remember_me">
                  <span>Remember me</span>
                </label>
                <a href="#" id="RecoverLink" class="auth-link">
                  Forgot password?
                </a>
              </div>

              <button type="submit" class="btn btn--primary btn--full btn--large">
                Sign In
              </button>
            {%- endform -%}

            <div class="auth-form__divider">
              <span>or</span>
            </div>

            <p class="text-center" style="color: var(--color-text-light);">
              New to Basenotes?
              <a href="{{ routes.account_register_url }}" class="auth-link">
                Create an account
              </a>
            </p>
          </div>

          {% comment %} Password Recovery Form {% endcomment %}
          <div id="RecoverFormSection" style="display: none;">
            <div class="text-center" style="margin-bottom: var(--spacing-2xl);">
              <div class="recover-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
                  <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
                </svg>
              </div>
              <h1 class="auth-form__title">Reset Password</h1>
              <p class="auth-form__subtitle">Enter your email and we'll send you a reset link</p>
            </div>

            {%- form 'recover_customer_password', class: 'auth-form' -%}
              {{ form.errors | default_errors }}

              {%- if form.posted_successfully? -%}
                <div class="alert alert--success">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="20 6 9 17 4 12"/>
                  </svg>
                  <span>Check your email for a password reset link.</span>
                </div>
              {%- endif -%}

              <div class="form-group">
                <label class="form-label" for="RecoverEmail">Email Address</label>
                <input
                  type="email"
                  name="email"
                  id="RecoverEmail"
                  class="form-input"
                  autocomplete="email"
                  autocapitalize="off"
                  autocorrect="off"
                  placeholder="you@example.com"
                  required
                >
              </div>

              <button type="submit" class="btn btn--primary btn--full btn--large">
                Send Reset Link
              </button>
            {%- endform -%}

            <p class="text-center" style="margin-top: var(--spacing-xl);">
              <a href="#" id="LoginLink" class="auth-link">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width: 16px; height: 16px; vertical-align: middle; margin-right: 4px;">
                  <line x1="19" y1="12" x2="5" y2="12"/>
                  <polyline points="12 19 5 12 12 5"/>
                </svg>
                Back to sign in
              </a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .auth-section {
    min-height: 100vh;
    padding-top: var(--header-height);
  }

  .auth-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    min-height: calc(100vh - var(--header-height));
  }

  /* Benefits Side */
  .auth-benefits {
    background: linear-gradient(135deg, var(--color-primary) 0%, #2a2a2a 100%);
    color: white;
    display: flex;
    align-items: center;
    padding: var(--spacing-4xl);
  }

  .auth-benefits__content {
    max-width: 480px;
  }

  .auth-benefits__eyebrow {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--color-secondary);
    margin-bottom: var(--spacing-lg);
  }

  .auth-benefits__title {
    font-size: var(--font-size-4xl);
    font-weight: 700;
    margin-bottom: var(--spacing-md);
    line-height: 1.2;
  }

  .auth-benefits__description {
    font-size: var(--font-size-lg);
    opacity: 0.8;
    margin-bottom: var(--spacing-2xl);
  }

  .auth-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-3xl);
  }

  .auth-stat {
    text-align: center;
    padding: var(--spacing-lg);
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-md);
  }

  .auth-stat__number {
    display: block;
    font-size: var(--font-size-2xl);
    font-weight: 700;
    color: var(--color-secondary);
    margin-bottom: var(--spacing-xs);
  }

  .auth-stat__label {
    font-size: var(--font-size-xs);
    opacity: 0.7;
  }

  .auth-benefits__testimonial {
    padding: var(--spacing-xl);
    background: rgba(255, 255, 255, 0.1);
    border-left: 3px solid var(--color-secondary);
  }

  .auth-benefits__testimonial p {
    font-style: italic;
    margin-bottom: var(--spacing-sm);
  }

  .auth-benefits__testimonial cite {
    font-size: var(--font-size-sm);
    opacity: 0.7;
  }

  /* Form Side */
  .auth-form-container {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-3xl);
    background: var(--color-background);
  }

  .auth-form-wrapper {
    width: 100%;
    max-width: 400px;
  }

  .auth-form__title {
    font-size: var(--font-size-3xl);
    margin-bottom: var(--spacing-xs);
  }

  .auth-form__subtitle {
    color: var(--color-text-light);
    font-size: var(--font-size-base);
  }

  .auth-form .form-group {
    margin-bottom: var(--spacing-lg);
  }

  .password-input-wrapper {
    position: relative;
  }

  .password-input-wrapper .form-input {
    padding-right: 48px;
  }

  .password-toggle {
    position: absolute;
    right: 12px;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    cursor: pointer;
    padding: 4px;
    color: var(--color-text-muted);
  }

  .password-toggle svg {
    width: 20px;
    height: 20px;
  }

  .form-options {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--spacing-xl);
  }

  .checkbox-label {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    font-size: var(--font-size-sm);
    color: var(--color-text-light);
    cursor: pointer;
  }

  .auth-link {
    color: var(--color-secondary);
    font-weight: 500;
    font-size: var(--font-size-sm);
  }

  .auth-form__divider {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    margin: var(--spacing-xl) 0;
    color: var(--color-text-muted);
    font-size: var(--font-size-sm);
  }

  .auth-form__divider::before,
  .auth-form__divider::after {
    content: '';
    flex: 1;
    height: 1px;
    background: var(--color-border);
  }

  /* Recover Form */
  .recover-icon {
    width: 64px;
    height: 64px;
    margin: 0 auto var(--spacing-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-background-secondary);
    border-radius: 50%;
    color: var(--color-secondary);
  }

  .recover-icon svg {
    width: 28px;
    height: 28px;
  }

  .alert {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    padding: var(--spacing-md) var(--spacing-lg);
    border-radius: var(--radius-md);
    margin-bottom: var(--spacing-lg);
  }

  .alert--success {
    background: rgba(76, 175, 80, 0.1);
    border: 1px solid var(--color-success);
    color: var(--color-success);
  }

  .alert--error {
    background: rgba(244, 67, 54, 0.1);
    border: 1px solid var(--color-error);
    color: var(--color-error);
  }

  .alert svg {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
  }

  /* Responsive */
  @media (max-width: 992px) {
    .auth-layout {
      grid-template-columns: 1fr;
    }

    .auth-benefits {
      display: none;
    }

    .auth-form-container {
      min-height: calc(100vh - var(--header-height));
    }
  }

  @media (max-width: 576px) {
    .auth-form-container {
      padding: var(--spacing-xl);
    }

    .form-options {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--spacing-md);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const loginSection = document.getElementById('LoginFormSection');
    const recoverSection = document.getElementById('RecoverFormSection');
    const recoverLink = document.getElementById('RecoverLink');
    const loginLink = document.getElementById('LoginLink');

    recoverLink?.addEventListener('click', function(e) {
      e.preventDefault();
      loginSection.style.display = 'none';
      recoverSection.style.display = 'block';
    });

    loginLink?.addEventListener('click', function(e) {
      e.preventDefault();
      recoverSection.style.display = 'none';
      loginSection.style.display = 'block';
    });

    // Check URL hash for recover
    if (window.location.hash === '#recover') {
      loginSection.style.display = 'none';
      recoverSection.style.display = 'block';
    }

    // Password toggle
    const toggleBtn = document.querySelector('[data-toggle-password]');
    if (toggleBtn) {
      toggleBtn.addEventListener('click', function() {
        const input = this.parentElement.querySelector('input');
        const showIcon = this.querySelector('.icon-show');
        const hideIcon = this.querySelector('.icon-hide');

        if (input.type === 'password') {
          input.type = 'text';
          showIcon.style.display = 'none';
          hideIcon.style.display = 'block';
        } else {
          input.type = 'password';
          showIcon.style.display = 'block';
          hideIcon.style.display = 'none';
        }
      });
    }
  });
</script>
